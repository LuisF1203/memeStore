{% liquid
  if section.settings.menu.links == blank
    assign main_menu_linklist = linklists[section.settings.menu].links
  else
    assign main_menu_linklist = section.settings.menu.links
  endif
%}
<script>
    window.addEventListener('scroll', function() {
            var totalHeight = document.body.scrollHeight - window.innerHeight;
            var scrollPercentage = (window.scrollY / totalHeight) * 100;
            console.log("User is scrolling! Scroll position: " + scrollPercentage + "%");
            if(scrollPercentage>=10){
                document.getElementById("main-nav").style.background="rgba(0, 0, 0, 0.900)";
            }else{
                document.getElementById("main-nav").style.background="none";
            }
        });
</script>


<div
  class="fixed top-0 left-0 right-0 z-20 "
  style="transition: 0.5s;"
  id="main-nav">

  <style>
    #main-nav:hover {
      background-color: rgba(0, 0, 0, 0.900) !important;
    }


    @keyframes slideDown {
      from {
        transform: translateY(-100%);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .cart-animation {
      animation: slideDown 0.3s ease-out forwards;
    }


  </style>


  <!-- {{ section.settings.bundle_text_color }} -->
  <!-- {{ section.settings.main_text_color }} -->
  <!-- {{ section.settings.options_text_color }} -->

  <h1 class="absoulte top-0 left-0 right-0 z-10 text-sm text-center font-bold " style="font-family: Arial, sans-serif; color:white; background:{{section.settings.bundle_main_color}} ">{{ section.settings.bundle_text }}</h1>
  <div
    class="absoulte top-6 left-0 right-0 z-10 "
    style="color:white;"
    x-data="{ mobileMenuOpen: false, searchBarOpen: false }"
    x-cloak>
    <div class="mx-auto">
      <div class="flex justify-center items-center py-6 md:justify-center">

        <div class="absolute md:hidden left-2 text-white">
          <div class="flex mb-auto mt-auto  md:hidden">
            <button
              x-on:click="mobileMenuOpen = true"
              type="button"
              class="m-auto inline-flex items-center justify-center focus:outline-none">
              {% render 'icon-menu' %}
            </button>
          </div>
        </div>
        <!-- STORE NAME / STORE LOGO -->
        <div class="">


          {% if section.settings.logo %}

            <a href="/">
              <img
                class="truncate"
                src="{{ section.settings.logo | image_url: width: 50 }}"
                width="{{ item.width }}"
                height="{{ item.height }}"
                loading="lazy"
                alt="{{ item.title | escape }}">
            </a>


          {% else %}
            <h1>
              <a href="/" class="md:text-4xl text-2xl font-bold truncate">{{ shop.name }}</a>
            </h1>
          {% endif %}


        <!-- NAVIGATION MENU 
        
        <nav class="hidden ml-32 md:flex space-x-10">
</nav>
        -->
        </div>


        <div class="absolute right-2 flex gap-10">


          <button
            x-on:click="searchBarOpen = true"
            type="button"
            class="hidden md:block whitespace-nowrap text-base hover:opacity-75">
            {% render 'icon-search' %}
          </button>
          <div class="hidden md:flex gap-2">
            {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <a href="{{ routes.account_url }}" class="text-base flex hover:opacity-75">
                  <span class="w-5 block m-auto">
                    {% render 'icon-account' %}
                  </span>

                </a>
                <span>/</span>
                {{ 'Cerrar Sesión' | customer_logout_link | replace: '<a', '<a class="text text-base hover:opacity-75"' }}
              {% else %}
                {{ 'Iniciar Sesión' | customer_login_link | replace: '<a', '<a class="text-base hover:opacity-75" ' }}
                <span>/</span>
                {{ 'Crear Cuenta' | customer_register_link | replace: '<a', '<a class="text-base hover:opacity-75" ' }}
              {% endif %}
            {% endif %}

          </div>









          <a
          id="cart-toggle"
          href="javascript:void(0);"
          style="color: white;">
          <span class="relative">
            {% render 'icon-shopping-bag' %}
          </span>

          {% if cart.item_count > 0 %}
            <div class="bg-red-500 w-3 h-3 p-1 rounded-full flex items-center justify-center absolute top-0 right-0 z-0">
              <span class="text-white text-xs font-bold">{{ cart.item_count }}</span>
            </div>
          {% endif %}
        </a>


        {% if cart.item_count > 0 %}
          <div id="cart-container" class="fixed top-24 right-2 bg-white text-black p-5 w-[15%] shadow-2xl cart-animation">
            <div>
              <button class="absolute top-3 right-2">
                {% render 'icon-close' %}
              </button>
              <div class="mt-5 mb-2">
                <h3 class="font-bold text-xl">Tu carrito</h3>
                <div class="flex justify-between text-xs text-gray-400 mt-5 mb-2">
                  <p>PRODUCTO</p>
                  <p>TOTAL</p>
                </div>
                <hr class="mb-5 mt-2">

                <form action="{{ routes.cart_url }}" method="POST">
                  {% for item in cart.items %}
                    <div class="flex justify-between items-start mb-4">
                      <div class="flex items-center flex-1 mr-2">
                        <img
                          src="{{ item.product.featured_image | img_url: 'small' }}"
                          alt="{{ item.product.title }}"
                          class="w-16 h-16 mr-2">
                        <div>
                          <p class="font-semibold">{{ item.product.title }}</p>
                          <p class="text-xs text-gray-400">Cantidad: {{ item.quantity }}</p>
                        </div>
                      </div>
                      <div class="flex flex-col items-end">
                        <p class="font-bold">{{ item.price | money }}</p>

                        <td class="py-4 px-2">
                          <input
                            type="number"
                            name="updates[{{ item.id }}]"
                            value="{{ item.quantity }}"
                            min="0"
                            class="w-20 border p-2">
                        </td>

                        <div class="flex mt-1">
                          <a href="javascript:void(0);" 
                             class="w-3 font-medium text-red-500 my-1 hover:animate-bounce" 
                             onclick="removeFromCart({{ forloop.index }})">
                            {% render 'icon-trashcan' %}
                          </a>
                        </div>
                        


                        <script>
                            function removeFromCart(line) {
                              fetch(`{{ routes.cart_change_url }}?line=${line}&quantity=0`, {
                                method: 'POST',
                                headers: {
                                  'Content-Type': 'application/json',
                                }
                              })
                              .then(response => {
                                if (response.ok) {
                                  location.reload();
                                } else {
                                  console.error('Error al eliminar el producto');
                                }
                              })
                              .catch(error => console.error('Error:', error));
                            }
                        </script>

                      </div>
                    </div>
                  {% endfor %}

                  <div class="mt-5">
                    <div class="flex justify-between font-bold">
                      <h3>Total estimado</h3>
                      <p>{{ cart.total_price | money }}</p>
                    </div>
                    <span class="text-xs text-gray-400">Impuestos, descuentos y envío calculados en la pantalla de pago.</span>
                  </div>
                  <button
                    type="submit"
                    name="checkout"
                    class="text-center w-full bg-[#252525] p-2 transition-all text-white hover:scale-105 mt-2">Pagar pedido</button>
                </form>
              </div>
            </div>
          </div>
        {% endif %}

        <script>
              document.addEventListener("DOMContentLoaded", function() {
                const closeButton = document.querySelector('.absolute.top-3.right-2');
                const cartContainer = document.querySelector('#cart-container');
            
                closeButton.addEventListener('click', function() {
                  cartContainer.style.display = 'none';
                });
              });
        </script>

        <script>
              document.addEventListener("DOMContentLoaded", function() {
                const cartToggle = document.getElementById('cart-toggle');
                const cartContainer = document.getElementById('cart-container');
            
                cartToggle.addEventListener('click', function() {
                  if (cartContainer.style.display === 'none' || cartContainer.style.display === '') {
                      cartContainer.style.display = 'block';
                  } else {
                      cartContainer.style.display = 'none';
                  }
                });
              });
        </script>






















        </div>


        <!-- CART BUTTON / ACCOUNT LINKS IF ENABLED
        <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
    <button x-on:click="searchBarOpen = true" type="button" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
                {% render 'icon-search' %}
            </button>
            <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
                {% render 'icon-shopping-bag' %}
            </a>
        
            {% if shop.customer_accounts_enabled %}
                {% if customer %}
                    <a href="{{ routes.account_url }}" class="text-base text-gray-500 hover:text-gray-900">account</a>
                    {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                {% else %}
                    {{ 'Log in ' | customer_login_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                    {{ 'Register' | customer_register_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                {% endif %}
            {% endif %}
        </div>
        -->
        <!-- MOBILE MENU CONTAINER -->
        <div x-show="mobileMenuOpen" class="fixed z-10 top-0 left-0 right-0 bottom-0 bg-[#000000e2] md:hidden">
          <div class="h-full">
            <div class="p-5 h-full">

              <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->

              <div class="flex items-center justify-between pb-2">
                <div>
                  <h1 class="text-lg text-white">{{ section.settings.mobile_menu_title }}</h1>
                </div>
                <div class="-mr-2">
                  <button
                    x-on:click="mobileMenuOpen = false"
                    type="button"
                    class="text-white mr-4">
                    {% render 'icon-close' %}
                  </button>
                </div>
              </div>

              <div class="mt-10 mb-10 flex justify-center items-center">
                <form
                  action="{{ routes.search_url }}"
                  method="get"
                  class="flex-auto">
                  <div class="relative text-gray-500 px-10 flex">
                    <input
                      type="search"
                      name="q"
                      placeholder="Search"
                      class="hover:w-full transition-all opacity-50 hover:opacity-100 duration-700 w-52 m-auto bg-white h-10 px-5 pr-10 rounded-full text-sm focus:outline-none">
                  </div>
                </form>
              </div>


              <div class="w-full flex justify-center divide-y-reverse text-xl font-bold gap-2">

                {% if shop.customer_accounts_enabled %}
                  {% if customer %}
                    <a href="{{ routes.account_url }}" class="hover:opacity-75">Account</a>
                    <span>
                      /
                    </span>
                    {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text hover:opacity-75 text-red-500"' }}
                  {% else %}
                    {{ 'Log in' | customer_login_link | replace: '<a', '<a class=" hover:opacity-75" ' }}
                    <span>
                      /
                    </span>
                    {{ 'Register' | customer_register_link | replace: '<a', '<a class=" hover:opacity-75" ' }}
                  {% endif %}
                {% endif %}

              </div>


              <!-- NAVIGATION LINKS FOR MOBILE MENU -->
              <div class="pt-3 h-[60%] flex justify-center">
                <nav class="grid gap-y-7 overflow-auto h-[70%] m-auto overflow-x-hidden w-auto">
                  {% for link in main_menu_linklist %}
                    {% if link.links != blank %}
                      {% assign mobile_link_handle = link.handle | replace: '-', '_' %}
                      <div class="relative text-center" x-data="{ {{ mobile_link_handle }}: false }">
                        <button
                          x-on:click="{{ mobile_link_handle }} = ! {{ mobile_link_handle }}"
                          type="button"
                          class="text-white text-center justify-between w-full">
                          <div>{{ link.title }}</div>
                          {% render 'icon-dropdown' %}
                        </button>

                        <div x-show="{{ mobile_link_handle }}" class="grid gap-y-7 py-3">
                          {% for childlink in link.links %}
                            <a href="{{ childlink.url }}" class="-m-3 p-3 mt-2 rounded-md text-white hover:bg-gray-50">
                              <span class="ml-3 text-base font-medium text-white">{{ childlink.title }}</span>
                            </a>
                          {% endfor %}
                        </div>
                      </div>

                    {% else %}
                      <a href="{{ link.url }}" class="m-auto p-3 text-center text-2xl font-bold opacity-50 hover:opacity-100 hover:scale-110 duration-300 rounded-md text-white">
                        {{ link.title }}
                      </a>

                    {% endif %}

                  {% endfor %}
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div x-show="searchBarOpen" class="w-full absolute top-0 bg-[#000000d0]">
      <button
        type="button"
        x-on:click="searchBarOpen = false"
        class="absolute top-0 right-0 mr-5 mt-5 text-white">
        {% render 'icon-close' %}
      </button>
      <div class="h-40 flex justify-center items-center">
        <form
          action="{{ routes.search_url }}"
          method="get"
          class="flex-auto">
          <div class="relative text-gray-500 px-10">
            <input
              type="search"
              name="q"
              placeholder="Search"
              class="w-full bg-white h-10 px-5 pr-10 rounded-full text-sm focus:outline-none">
            <button type="submit" class="absolute right-0 top-0 mt-2 mr-2 md:mr-20">
              {% render 'icon-search' %}
            </button>
          </div>
        </form>
      </div>
    </div>

  </div>

</div>
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "label": "Logo",
        "id": "logo"
      },
      {
        "type": "text",
        "id": "mobile_menu_title",
        "default": "Menu",
        "label": "Mobile Menu Title"
      },
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "Heading Navigation Menu"
      },
      {
        "type": "text",
        "id": "bundle_text",
        "default": "BUNDLE AND SAVE TODAY",
        "label": "Bundle text"
      }, {
        "type": "color",
        "id": "main_color",
        "label": "Main color",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "main_text_color",
        "label": "Main text color",
        "default": "#000000"
      }, {
        "type": "color",
        "id": "bundle_main_color",
        "label": "Bundle color",
        "default": "#ffffff"
      }, {
        "type": "color",
        "id": "bundle_text_color",
        "label": "Bundle text color",
        "default": "#000000"
      }, {
        "type": "color",
        "id": "options_text_color",
        "label": "Options text color",
        "default": "#000000"
      }
    ]
  }
{% endschema %}