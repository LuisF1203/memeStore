{% liquid
    if section.settings.menu.links == blank
        assign main_menu_linklist = linklists[section.settings.menu].links
    else
        assign main_menu_linklist = section.settings.menu.links
    endif
%}
<script>
    window.addEventListener('scroll', function() {
            var totalHeight = document.body.scrollHeight - window.innerHeight;
            var scrollPercentage = (window.scrollY / totalHeight) * 100;
            console.log("User is scrolling! Scroll position: " + scrollPercentage + "%");
            if(scrollPercentage>=10){
                document.getElementById("main-nav").style.background="rgba(0, 0, 0, 0.900)";
            }else{
                document.getElementById("main-nav").style.background="none";
            }
        });
</script>


<div class="fixed top-0 left-0 right-0 z-20 " style="transition: 0.5s;" id="main-nav">

    <style>
        #main-nav:hover{
            background-color:rgba(0, 0, 0, 0.900) !important;
        }

    </style>


<!--{{ section.settings.bundle_text_color }}-->
<!--{{ section.settings.main_text_color }}-->
<!--{{ section.settings.options_text_color }}-->

<h1 class="absoulte top-0 left-0 right-0 z-10 text-sm text-center font-bold" style="font-family: Arial, sans-serif; color:white;">{{ section.settings.bundle_text }}</h1>
<div class="absoulte top-6 left-0 right-0 z-10 " style="color:white;" x-data="{ mobileMenuOpen: false, searchBarOpen: false }" x-cloak>
    <div class="mx-auto px-4 sm:px-6">
        <div class="flex justify-center items-center py-6 md:justify-center md:space-x-10">
            <!-- STORE NAME / STORE LOGO -->
            <div class="">
                <h1>
                    <a href="/" class="text-4xl font-bold truncate">{{ shop.name }}</a>
                </h1>
                <!-- NAVIGATION MENU 
                
                <nav class="hidden ml-32 md:flex space-x-10">
                </nav>
                
                 -->
            </div>
            
            <div class=" absolute flex right-5 space-x-5" style="color: white;">
                <div class="nav-icons flex gap-5">
                    <button x-on:click="searchBarOpen = true" type="button" class="whitespace-nowrap text-base hover:opacity-75" >
                        {% render 'icon-search' %}
                    </button>
                    <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base hover:opacity-75" >
                        {% render 'icon-shopping-bag' %}
                    </a>
    
                    {% if shop.customer_accounts_enabled %}
                        {% if customer %}
                            <a href="{{ routes.account_url }}" class="text-base hover:opacity-75" >account</a>
                            {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text text-base hover:opacity-75"' }}
                        {% else %}
                            {{ 'Log in ' | customer_login_link | replace: '<a', '<a class="text-base hover:opacity-75" ' }}
                            {{ 'Register' | customer_register_link | replace: '<a', '<a class="text-base hover:opacity-75" ' }}
                        {% endif %}
                    {% endif %}
                </div>


                <div class="mobile-menu-btn hidden -mr-2 -my-2 ml-3 md:hidden">
                    <button x-on:click="mobileMenuOpen = true" type="button" class="p-2 inline-flex items-center justify-center focus:outline-none">
                        {% render 'icon-menu' %}
                    </button>
                </div>


            </div>
            

            

            <!-- CART BUTTON / ACCOUNT LINKS IF ENABLED
            <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
                <button x-on:click="searchBarOpen = true" type="button" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
                    {% render 'icon-search' %}
                </button>
                <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
                    {% render 'icon-shopping-bag' %}
                </a>

                {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                        <a href="{{ routes.account_url }}" class="text-base text-gray-500 hover:text-gray-900">account</a>
                        {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                    {% else %}
                        {{ 'Log in ' | customer_login_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                        {{ 'Register' | customer_register_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                    {% endif %}
                {% endif %}
            </div>
             -->
            <!-- MOBILE MENU CONTAINER -->
            <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
                <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
                    <div class="p-5 divide-y-2 divide-gray-50">

                        <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->

                        <div class="flex items-center justify-between pb-3">
                            <div>
                                <h1 class="text-lg text-gray-500">{{ section.settings.mobile_menu_title }}</h1>
                            </div>
                            <div class="-mr-2">
                                <button x-on:click="mobileMenuOpen = false" type="button" class="bg-white rounded-md p-2 text-gray-500">
                                    {% render 'icon-close' %}
                                </button>
                            </div>
                        </div>



                        <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base hover:opacity-75 text-gray-500 hover:text-gray-900 flex items-center gap-5" >
                            {% render 'icon-shopping-bag' %}
                            Carrito
                        </a>

                        <!-- NAVIGATION LINKS FOR MOBILE MENU -->
                        <div class="pt-3">
                            <nav class="grid gap-y-7">
                                {% for link in main_menu_linklist %}
                                    {% if link.links != blank %}
                                    {% assign mobile_link_handle = link.handle | replace: '-', '_' %}
                                        <div class="relative" x-data="{ {{ mobile_link_handle }}: false }">
                                            <button x-on:click="{{ mobile_link_handle }} = ! {{ mobile_link_handle }}" type="button" class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full">
                                                <div>{{ link.title }}</div>
                                                {% render 'icon-dropdown' %}
                                            </button>

                                            <div x-show="{{ mobile_link_handle }}" class="grid gap-y-7 py-3">
                                                {% for childlink in link.links %}
                                                    <a href="{{ childlink.url }}" class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                                                        <span class="ml-3 text-base font-medium text-gray-500">hola{{ childlink.title }}</span>
                                                    </a>
                                                {% endfor %}
                                            </div>
                                        </div>

                                        
                                    {% else %}
                                        <a href="{{ link.url }}" class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                                            {{ link.title }}
                                        </a>

                                    {% endif %}
                                    
                                {% endfor %}
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    

    <div x-show="searchBarOpen" class="w-full absolute top-0 bg-[#000000d0]">
        <button type="button" x-on:click="searchBarOpen = false" class="absolute top-0 right-0 mr-5 mt-5 text-white">
            {% render 'icon-close' %}
        </button>
        <div class="h-40 flex justify-center items-center">
            <form action="{{ routes.search_url }}" method="get" class="flex-auto">
                <div class="relative text-gray-500 px-10">
                    <input type="search" name="q" placeholder="Search" class="w-full bg-white h-10 px-5 pr-10 rounded-full text-sm focus:outline-none">
                    <button type="submit" class="absolute right-0 top-0 mt-2 mr-2 md:mr-20">
                        {% render 'icon-search' %}
                    </button>
                </div>
            </form>
        </div>
    </div>
    
</div>

</div>

<style>
        @media (max-width: 768px) {
            .nav-icons{
                display: none;
            }
            .mobile-menu-btn{
                display: block;
            }
    }
</style>
{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "text",
            "id": "mobile_menu_title",
            "default": "Menu",
            "label": "Mobile Menu Title"
        },
        {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "Heading Navigation Menu"
        }
        ,{
            "type": "text",
            "id": "bundle_text",
            "default": "BUNDLE AND SAVE TODAY",
            "label": "Bundle text"
        },
        {
        "type": "color",
        "id": "main_color",
        "label": "Main color",
        "default": "#ffffff"
        },
        {
        "type": "color",
        "id": "main_text_color",
        "label": "Main text color",
        "default": "#000000"
        },
        {
        "type": "color",
        "id": "bundle_main_color",
        "label": "Bundle color",
        "default": "#ffffff"
        },
        {
        "type": "color",
        "id": "bundle_text_color",
        "label": "Bundle text color",
        "default": "#000000"
        },
        {
        "type": "color",
        "id": "options_text_color",
        "label": "Options text color",
        "default": "#000000"
        }
    ]
}
{% endschema %}